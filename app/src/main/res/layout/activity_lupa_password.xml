<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <LinearLayout
        android:id="@+id/headerLupa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="45dp"
        >
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:src="@drawable/backrow"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lupa Kata Sandi"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp"/>
    </LinearLayout>
    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/headerLupa"
        android:alpha=".3"
        android:background="@color/colorDefault"
        android:elevation="5dp"/>

    <LinearLayout
        android:id="@+id/containForget"
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/shadow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/greyDarkFont"
            android:layout_marginLeft="3dp" />

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:hint="input your email..."
            android:ems="10"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/btn_forget"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:text="Set Ulang Kata Sandi"
            android:background="@drawable/buttonorange"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/containForget" />
    </LinearLayout>
</RelativeLayout>