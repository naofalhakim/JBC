<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_margin="2dp"
    android:background="@drawable/itembarangback"
    >
    <ImageView
        android:id="@+id/imgBarangVendor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitStart"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txt_bonus_barang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-90%"
        android:textColor="@color/white"
        android:padding="3dp"
        android:textStyle="bold"
        android:layout_alignRight="@id/txtnamabarang"
        android:background="@drawable/buttonorange"
        />

    <TextView
        android:id="@+id/txtnamabarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Baju Black Panther"
        android:textColor="@color/white"
        android:background="@drawable/buttonhijau"
        android:padding="4dp"
        android:layout_below="@id/imgBarangVendor"
        />

</RelativeLayout>
