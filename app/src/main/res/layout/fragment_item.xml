<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parama Budaya"
                android:id="@+id/txtJudul"
                android:textStyle="bold"
                android:textSize="16dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtPembuat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UKM Jawa - TelU"
                    />
                <TextView
                    android:text="On, "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/txtTanggal"
                    android:textStyle="bold"
                    android:textSize="12dp" />
                <TextView
                    android:id="@+id/txtTanggal"
                    android:text="30 Juli 2018"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.3dp"
                android:background="@color/colorPrimaryDark"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="7dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/imgPoster"
                android:scaleType="centerCrop"
                android:src="@drawable/poster"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-31dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free Entry"
                    android:textColor="@color/white"
                    android:background="@drawable/backgroundstatus"
                    android:textStyle="bold|italic"
                    android:paddingLeft="10dp"
                    android:paddingRight="30dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"/>

                <TextView
                    android:id="@+id/txtlokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gedung Keong"
                    android:textColor="@color/white"
                    android:background="@drawable/backgroundlokasi"
                    android:textStyle="bold|italic"
                    android:paddingLeft="30dp"
                    android:paddingRight="15dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <!--<TextView-->
                <!--android:id="@+id/txtDeskripsi"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--/>-->

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
